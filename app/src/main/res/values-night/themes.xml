<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for dark mode. -->
    <style name="Theme.ShrinkSpace" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/surface</item>
        <!-- Surface colors. -->
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_variant</item>
        <!-- Background colors. -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/on_background</item>
        <!-- Error colors. -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>
        <!-- Custom attributes for our components -->
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardStrokeColor">@color/card_stroke</item>
        <item name="progressTrackColor">@color/progress_track</item>
        <item name="progressIndicatorColor">@color/progress_indicator</item>
        <!-- Material 3 specific attributes -->
        <item name="materialThemeOverlay">@style/ThemeOverlay.Material3.DynamicColors</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:navigationBarColor">@color/surface</item>
    </style>
</resources> 