<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="com.google.android.material.card.MaterialCardView">

    <LinearLayout
        android:id="@+id/empty_state_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_xlarge"
        android:gravity="center">

        <!-- Illustration -->
        <ImageView
            android:id="@+id/illustration_view"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="@dimen/spacing_large"
            android:background="@drawable/ic_empty_state"
            android:contentDescription="@string/empty_state_illustration"
            tools:background="@drawable/ic_launcher_foreground" />

        <!-- Title -->
        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_small"
            android:textSize="@dimen/text_headline"
            android:textColor="@color/on_surface"
            android:textStyle="bold"
            android:gravity="center"
            tools:text="No Media Found" />

        <!-- Message -->
        <TextView
            android:id="@+id/message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_large"
            android:textSize="@dimen/text_body"
            android:textColor="@color/on_surface_variant"
            android:gravity="center"
            android:maxLines="3"
            tools:text="Your device doesn't have any media files yet. Add some photos or videos to get started." />

        <!-- Action Container -->
        <LinearLayout
            android:id="@+id/action_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Primary Action Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/action_button"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height"
                android:text="Grant Permissions"
                android:textSize="@dimen/text_body"
                android:visibility="gone"
                app:cornerRadius="@dimen/card_corner_radius"
                tools:visibility="visible" />

            <!-- Secondary Action Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/secondary_action_button"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height"
                android:layout_marginTop="@dimen/spacing_small"
                android:text="Learn More"
                android:textSize="@dimen/text_body"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

</merge> 